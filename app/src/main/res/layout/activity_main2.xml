<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SpecificyClass">

    <View
        android:id="@+id/primaparte"
        android:layout_width="413dp"
        android:layout_height="314dp"
        android:background="#041339"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/secondaparte"
        android:layout_width="411dp"
        android:layout_height="476dp"
        android:background="@drawable/layout_bg"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="254dp" />

    <View
        android:id="@+id/view"
        android:layout_width="407dp"
        android:layout_height="111dp"
        android:layout_marginTop="648dp"
        android:background="#041339"
        android:rotationX="52"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/primaparte" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="298dp"
        android:layout_height="60dp"
        android:text="SCOPRI DI PIU':"
        android:textColor="@color/white"
        android:textSize="40dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="33dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CLASSI ANIMALI"
        android:textColor="@color/white"
        android:textSize="30dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="51dp"
        tools:layout_editor_absoluteY="129dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="80dp"
        android:layout_height="77dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="324dp"
        tools:layout_editor_absoluteY="16dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="80dp"
        android:layout_height="26dp"
        android:text="Flavia"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/white"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="336dp"
        tools:layout_editor_absoluteY="103dp" />

    <SearchView
        android:layout_width="59dp"
        android:layout_height="53dp"
        android:background="@drawable/layout_bgcerca"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="336dp"
        tools:layout_editor_absoluteY="190dp" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="235dp"
        android:layout_height="52dp"
        android:background="@drawable/layout_bgcerca"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="                   RICERCA"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="190dp" />

    <RelativeLayout
        android:id="@+id/secondaparte1"
        android:layout_width="411dp"
        android:layout_height="399dp"
        android:background="@drawable/layout_bg"
        android:bottomLeftRadius="25dp"
        android:bottomRightRadius="25dp"
        android:topLeftRadius="25dp"
        android:topRightRadius="25dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="254dp">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="388dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="183dp"
                    android:layout_height="270dp"
                    android:layout_marginBottom="156dp"
                    android:translationY="60dp"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:srcCompat="@android:color/secondary_text_light"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="16dp"
                    tools:srcCompat="@android:drawable/ic_menu_gallery"
                    tools:visibility="visible" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="183dp"
                    android:layout_height="270dp"
                    android:layout_marginBottom="156dp"
                    android:translationY="60dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:srcCompat="@android:drawable/ic_menu_gallery"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="251dp" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="183dp"
                    android:layout_height="270dp"
                    android:layout_marginBottom="156dp"
                    android:translationY="60dp"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:srcCompat="@android:color/secondary_text_light"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="16dp"
                    tools:srcCompat="@android:drawable/ic_menu_gallery"
                    tools:visibility="visible" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="183dp"
                    android:layout_height="270dp"
                    android:layout_marginBottom="156dp"
                    android:translationY="60dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:srcCompat="@android:drawable/ic_menu_gallery"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="251dp" />

            </LinearLayout>
        </HorizontalScrollView>
    </RelativeLayout>

    <ImageButton
        android:id="@+id/imageButton20"
        android:layout_width="50dp"
        android:layout_height="50dp"
        tools:ignore="MissingConstraints"
        android:background="#041339"
        tools:layout_editor_absoluteX="317dp"
        tools:layout_editor_absoluteY="676dp"
        tools:src="@drawable/ic_menu" />

    <ImageButton
        android:id="@+id/imageButton21"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#041339"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="676dp"
        tools:src="@drawable/ic_back" />

    <ImageButton
        android:id="@+id/imageButton22"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#041339"
        android:src="@drawable/ic_home"
        android:tint="@color/material_on_primary_emphasis_medium"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="180dp"
        tools:layout_editor_absoluteY="676dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_bgcerca"
        android:text="Inserisci Segnalazione"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="96dp"
        tools:layout_editor_absoluteY="588dp" />

</androidx.constraintlayout.widget.ConstraintLayout>