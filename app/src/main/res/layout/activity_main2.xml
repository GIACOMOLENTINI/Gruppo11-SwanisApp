<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/gradient_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="298dp"
                android:layout_height="60dp"
                android:text="SCOPRI DI PIU':"
                android:layout_marginTop="40dp"
                android:layout_marginHorizontal="16dp"
                android:textColor="@color/white"
                android:textSize="40dp" />

            <ImageView
                android:id="@+id/imageUte"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/flavia"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CLASSI ANIMALI"
                android:layout_marginHorizontal="30dp"
                android:textColor="@color/white"
                android:textSize="30dp"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="FLAVIA"
                android:textSize="16dp"
                android:translationX="50dp"
                android:textColor="@color/white" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <EditText
                android:id="@+id/editTextTextPersonName"
                android:layout_width="235dp"
                android:layout_height="50dp"
                android:background="@drawable/layout_bgcerca"
                android:ems="10"
                android:textSize="20dp"
                android:inputType="textPersonName"
                android:hint="RICERCA"
                android:gravity="center"
                android:layout_marginHorizontal="50dp"
                android:layout_marginTop="10dp"/>

            <ImageButton
                android:id="@+id/btnsource"
                android:layout_width="59dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/layout_bgcerca"
                app:backgroundTint="#a1c4fd"
                android:src="@drawable/src" />

        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:background="@drawable/layout_bgcerca">

        <HorizontalScrollView
            android:layout_width="410dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="410dp"
                android:layout_height="350dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn"
                    android:layout_width="200dp"
                    android:layout_height="250dp"
                    android:layout_marginTop="60dp"
                    android:background="@drawable/mammiferi"
                    android:translationX="15dp" />

                <ImageButton
                    android:id="@+id/imageView6"
                    android:layout_width="200dp"
                    android:layout_height="250dp"
                    android:layout_marginTop="60dp"
                    android:background="@drawable/anfibi"
                    android:translationX="30dp" />

                <ImageButton
                    android:id="@+id/btn1"
                    android:layout_width="200dp"
                    android:layout_height="250dp"
                    android:layout_marginTop="60dp"
                    android:background="@drawable/pesci"
                    android:translationX="45dp" />

            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp">

            <Button
                android:id="@+id/button"
                android:layout_width="235dp"
                android:layout_height="60dp"
                android:background="@drawable/layout_bgcerca"
                android:gravity="center"
                android:text="INSERISCI SEGNALAZIONE"
                android:textSize="18dp"
                android:translationX="100dp"
                app:backgroundTint="#a1c4fd" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton20"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/layout_bg"
                android:translationX="15dp"
                android:src="@drawable/ic_data"/>

            <ImageButton
                android:id="@+id/imageButton21"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/layout_bg"
                android:translationX="125dp"
                android:src="@drawable/ic_home"/>

            <ImageButton
                android:id="@+id/imageButton22"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/layout_bg"
                android:translationX="250dp"
                android:src="@drawable/list"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>