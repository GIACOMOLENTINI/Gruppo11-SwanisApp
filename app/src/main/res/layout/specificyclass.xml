<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SpecificyClass">

    <View
        android:id="@+id/primaparte"
        android:layout_width="410dp"
        android:layout_height="254dp"
        android:foreground="#6633FF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/secondaparte"
        android:layout_width="411dp"
        android:layout_height="450dp"
        android:background="@drawable/layout_bg"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="198dp"
        tools:ignore="MissingConstraints" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="648dp"
        app:layout_constraintTop_toTopOf="@+id/primaparte"
        tools:layout_editor_absoluteX="0dp" />
    <TextView
        android:id="@+id/textView3"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:text="Classe: RETTILI"
        android:textColor="@color/white"
        android:textSize="30dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="42dp" />
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="60dp"
        android:layout_height="65dp"
        android:background="@drawable/foto_utente"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="326dp"
        tools:layout_editor_absoluteY="34dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Francesco"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="317dp"
        tools:layout_editor_absoluteY="112dp" />

    <SearchView
        android:layout_width="60dp"
        android:layout_height="71dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="219dp" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="CERCA"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="229dp" />

    <ScrollView
        android:layout_width="411dp"
        android:layout_height="364dp"
        android:layout_marginTop="284dp"
        app:layout_constraintTop_toTopOf="@+id/primaparte"
        tools:layout_editor_absoluteX="-1dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:translationX="50dp"
                android:translationY="60dp"
                tools:layout_editor_absoluteX="49dp"
                tools:layout_editor_absoluteY="341dp"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />

            <ImageButton
                android:id="@+id/imageButton7"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:translationX="220dp"
                android:translationY="-70dp"
                tools:layout_editor_absoluteX="238dp"
                tools:layout_editor_absoluteY="341dp"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />

            <ImageButton
                android:id="@+id/imageButton8"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:translationX="50dp"
                android:translationY="-20dp"
                tools:layout_editor_absoluteX="49dp"
                tools:layout_editor_absoluteY="341dp"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:translationX="220dp"
                android:translationY="-150dp"
                tools:layout_editor_absoluteX="238dp"
                tools:layout_editor_absoluteY="341dp"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:translationX="220dp"
                android:translationY="-110dp"
                tools:layout_editor_absoluteX="49dp"
                tools:layout_editor_absoluteY="507dp"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:translationX="50dp"
                android:translationY="-240dp"
                tools:layout_editor_absoluteX="238dp"
                tools:layout_editor_absoluteY="507dp"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />

        </LinearLayout>
    </ScrollView>

    <ImageButton
        android:id="@+id/imageButton20"
        android:layout_width="60dp"
        android:layout_height="60dp"
        tools:layout_editor_absoluteX="317dp"
        tools:layout_editor_absoluteY="664dp"
        tools:ignore="MissingConstraints" />
    <ImageButton
        android:id="@+id/imageButton21"
        android:layout_width="60dp"
        android:layout_height="60dp"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="664dp"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/imageButton22"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/home"
        android:tint="@color/material_on_primary_emphasis_medium"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="175dp"
        tools:layout_editor_absoluteY="664dp"
        tools:src="@drawable/home" />
</androidx.constraintlayout.widget.ConstraintLayout>