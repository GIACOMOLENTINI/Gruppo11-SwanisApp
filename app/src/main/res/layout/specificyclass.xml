<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/gradient_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="140dp"
                android:layout_height="60dp"
                android:text="RETTILI"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                android:textColor="@color/white"
                android:textSize="40dp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="160dp"
                android:background="@drawable/francesco"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:text="Rappresentarono la prima classe di vertebrati svincolatasi dall'ambiente acquatico e quindi adattata, per le fondamentali funzioni biologiche, alla vita in un ambiente strettamente terrestre. Il numero di specie di rettili attualmente viventi Ã¨ di circa 11 341"
                android:textColor="@color/white"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="FRANCESCO"
                android:textSize="16dp"
                android:translationX="30dp"
                android:textColor="@color/white" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <EditText
                android:id="@+id/editTextTextPersonName"
                android:layout_width="235dp"
                android:layout_height="50dp"
                android:background="@drawable/layout_bgcerca"
                android:ems="10"
                android:textSize="20dp"
                android:inputType="textPersonName"
                android:text="RICERCA"
                android:gravity="center"
                android:layout_marginHorizontal="50dp"
                android:layout_marginTop="10dp"/>

            <SearchView
                android:layout_width="59dp"
                android:layout_height="50dp"
                android:background="@drawable/layout_bgcerca"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:background="@drawable/layout_bgcerca">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="340dp">

            <LinearLayout
                android:layout_width="410dp"
                android:layout_height="350dp"
                android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/btn"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/alligatmissisi"
                        android:translationX="50dp" />

                    <ImageButton
                        android:id="@+id/imageView6"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_marginTop="-130dp"
                        android:background="@drawable/lucertolamuraiola"
                        android:translationX="230dp" />

            <ImageButton
                android:id="@+id/btn1"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/testugpalustre"
                android:translationX="50dp" />

            <ImageButton
                android:id="@+id/btn3"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginTop="-130dp"
                android:background="@drawable/vipera"
                android:translationX="230dp" />

            <ImageButton
                android:id="@+id/btn4"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/geco"
                android:translationX="50dp" />

            <ImageButton
                android:id="@+id/btn5"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginTop="-130dp"
                android:background="@drawable/boaconstrictor"
                android:translationX="230dp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="15dp">

            <ImageButton
                android:id="@+id/imageButton20"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/layout_bg"
                android:translationX="15dp"
                android:src="@drawable/ic_data"/>

            <ImageButton
                android:id="@+id/imageButton21"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/layout_bg"
                android:translationX="125dp"
                android:src="@drawable/ic_home"/>

            <ImageButton
                android:id="@+id/imageButton22"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/layout_bg"
                android:translationX="250dp"
                android:src="@drawable/ic_utente"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>